<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:vm="clr-namespace:ExamenFinalTorresChaconVanessa.ViewModels"
             x:Class="ExamenFinalTorresChaconVanessa.Views.ListPage"
             Title="Vanessa Torres"
             BackgroundColor="Azure">
    <ContentPage.BindingContext>
        <vm:AeropuertoListViewModel />
    </ContentPage.BindingContext>

    <ListView ItemsSource="{Binding AeropuertoResponses}" 
       SeparatorVisibility="Default"
       BackgroundColor="Cyan"
       Margin="10"
       x:Name="vtorres_listview1">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="15" Margin="10" BackgroundColor="LightSalmon">

                        <Label Text="{Binding Name}" 
                        FontSize="22" 
                        FontAttributes="Bold" 
                        TextColor="#333333" 
                        HorizontalOptions="Center" 
                        x:Name="vtorres_label1"/>

                        <StackLayout Padding="10">

                            <StackLayout Orientation="Horizontal" Padding="5">
                                <Label Text="PaÃ­s:" 
                                FontAttributes="Bold" 
                                FontSize="14" 
                                TextColor="#555555" 
                                x:Name="vtorres_label2"/>
                                <Label Text="{Binding Country}" 
                                FontSize="14" 
                                TextColor="#1E90FF" 
                                x:Name="vtorres_label3"/>
                            </StackLayout>


                            <StackLayout Orientation="Horizontal" Padding="5">
                                <Label Text="Latitud:" 
                                FontAttributes="Bold" 
                                FontSize="14" 
                                TextColor="#555555" 
                                x:Name="vtorres_label4"/>
                                <Label Text="{Binding Latitude}" 
                                FontSize="14" 
                                TextColor="#228B22" 
                                x:Name="vtorres_label5"/>
                            </StackLayout>


                            <StackLayout Orientation="Horizontal" Padding="5">
                                <Label Text="Longitud:" 
                                FontAttributes="Bold" 
                                FontSize="14" 
                                TextColor="#555555" 
                                x:Name="vtorres_label6"/>
                                <Label Text="{Binding Longitude}" 
                                FontSize="14" 
                                TextColor="#FF4500" 
                                x:Name="vtorres_label7"/>
                            </StackLayout>


                            <StackLayout Orientation="Horizontal" Padding="5">
                                
                                <Label Text="{Binding Email}" 
                                FontSize="14" 
                                TextColor="#8A2BE2" 
                                x:Name="vtorres_label8"/>
                            </StackLayout>


                        </StackLayout>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>


</ContentPage>
   

   